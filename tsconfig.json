{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": ".",
    "paths": {
      "@snapdev-ui/core": ["./packages/snapdev-ui/src"],
      "@snapdev-ui/core/*": ["./packages/snapdev-ui/src/*"],
      "@snapdev-ui/docs": ["./packages/snapdev-ui-docs/src"],
      "@snapdev-ui/docs/*": ["./packages/snapdev-ui-docs/src/*"],
      "@snapdev-ui/editor": ["./packages/snapdev-ui-editor/src"],
      "@snapdev-ui/editor/*": ["./packages/snapdev-ui-editor/src/*"]
    },
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": []
  }
}
