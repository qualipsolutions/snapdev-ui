{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "jsx": "preserve",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": true,
    "allowJs": true,
    "paths": {
      "@snapdev-ui/core": ["./packages/snapdev-ui/src"],
      "@snapdev-ui/core/*": ["./packages/snapdev-ui/src/*"],
    }
  },
  "exclude": ["**/build/"]
}